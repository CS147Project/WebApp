  <body>
    <div id="container" class="container">
      <!-- HEADER -->
      <div id="header" class="header">
        <!-- LOGO -->
        <div id="logo">
          <h1> TeamWorkout </h1>
        </div>
        <!-- ACCOUNTMENU -->
        <div id="accountMenu" class="dropdown pull-right">
          
          <button class="transparentBG btn dropdown-toggle" data-toggle="dropdown" type="button">
            <img src="img/account_icon.png" alt="Account"> 
            <span class="caret"></span>
          </button>

          <ul class="dropdown-menu">
              <li><a href="/logout">Logout</a></li>
             <!--  <li><a href="/teamPage">Team Page</a></li>
              <li class="disabled"><a href="#">Account</a></li> -->
              <li><a href="/settings">Settings</a></li>
              <li class="disabled"><a href="#">Help</a></li>
          </ul>
        </div><!-- END OF ACCOUNTMENU -->

        </div> <!-- END OF HEADER -->

        
      <!-- CONTENT -->
      <div id="content" class="content clearfix" style="overflow: scroll;">
        {{{body}}}
      </div> <!-- END OF CONTENT -->
      {{msg}}

      <!-- FOOTER -->
      <div id="footer" class="footer navbar-fixed-bottom">
        <!-- GENERAL NAVIGATION -->
        <!-- TODO: Potentially change to button groun - data-toggle="buttons-radio" -->
        <div id="genNav" >
          <ul class="navbar">
            <li>
              <a href="home" id="home-btn" class="btn"> 
                <img src="img/home_icon.png" alt="Home">
                <br />
                Home
              </a>
            </li>
            <li>
              <a href="messages" id="message-btn" class="btn btn-lg"> 
                <img src="img/message_icon.png" alt="Messages">
                <br />
                Messages
              </a>
            </li>
            <li>
              <a href="workouts" id="workout-btn" class="btn"> 
                <img src="img/workout_icon.png" alt="Workouts">
                <br />
                Workouts
              </a>
            </li>
            <li>
<!--               <a href="analytics" id="analytics_btn" class="btn inactive"> 
                <img src="img/analytics_icon.png" alt="Analytics"> 
                <br />
                Analytics
              </a> -->
            </li>
          </ul>
        </div>
      </div> 
      <!-- END OF FOOTER -->

    </div>
    <script src="https://code.jquery.com/jquery.js"></script>
    <script src="/js/bootstrap.js"></script>
    <script src="//use.edgefonts.net/alex-brush:n4:all.js"></script> 
    <script src="js/general.js"></script>
