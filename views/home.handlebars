<!doctype html>

<!-- HOME DISPLAY -->

<div id="selectW" class="swiper-container selectW-img">
    <!-- SWIPER WRAPPER -->
  <div class="swiper-wrapper">
      {{#each userWorkouts}}
      <!-- SLIDE -->
      <div class="swiper-slide"> 
        <!-- FORM FOR SINGLE EXERCISE -->
        <div class="workoutSlide">
          <div class="pull-right">
            <a href="/goWorkout{{_id}}" id="workoutLinks" class="btn btn-primary">
              <img src="img/goworkout-icon.png" alt="Start Workout" class="img-circle" height="50">
            </a>
          </div>

          <div>
          <h5>Workout Title:</h5>
          <h4>{{title}}</h4>
          <br />
          <h4>Exercise Summary:</h4>
            {{#each userWorkouts.exercises}}
              <p>{{exercise}}</p>
            {{/each}}
          </div>
        </div>
      </div> 
      <!-- END OF SLIDE -->
      {{/each}}
  </div>
  <div class="pagination"></div>
</div>



  
  <div class="panel panel-default">
    <div class="panel-heading"> 
      To-Do List
    </div>
   
    <table class="table">
      {{#unless currentTasks}}
      <tr>
        <td><center> No Current Tasks! </center></td>
      </tr>
      {{/unless}}
      {{#each currentTasks}}
      <tr id="workoutLinks" class="btn">
        <td id="date"> {{datetime}} </td>
        <td id="title"> {{title}} </td>
      </tr>
      {{/each}}
    </table>
  </div>


