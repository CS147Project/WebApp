<!doctype html>

<h3>Create a Workout</h3>
<form class="form" role="form" method="post" action="/createWorkout">
    <input type="text" class="form-control" placeholder="Title of Exercise" name="title" required autofocus>
<!--     <input type="text" class="form-control" placeholder="To be completed by (mm/dd/yy)" name="dueDate"> -->
    <textarea cols="50" rows="3" name="description" placeholder="Workout Description"></textarea>
    <br>
    <div id="exercisesCreated">
        <h4>Exercises</h4>
        <p class="caption">Please fill in all the fields in each exercise.</p>
    </div>
    <input type="hidden" id="numExercises" name="numExercises" value="0">
    <button class="btn btn-primary" id="addExercise" type="button"><span class="glyphicon glyphicon-plus-sign glyphicons-lg pull-left"></span>&nbsp; Add Exercise</button>

    <br />
    <br />
    <button class="btn btn-success" type="submit">Done!</button>
</form>
