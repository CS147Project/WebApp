<form id="goExerciseForm" class="form-horizontal center" role="form" method="get" action="">
    
    <h2>{{exercise.name}}</h2>

    {{#if exercise.weight}}
        <div class="form-group">
            <label for="inputWeight" class="col-sm-2 control-label">Weight:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="inputWeight" placeholder="{{exercise.weight}}" required>
            </div>
        </div>
    {{/if}}
    {{#if exercise.set}}
        <div class="form-group">
            <label for="inputSet" class="col-sm-2 control-label">Set:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="inputSet" placeholder="{{exercise.set}}" required>
            </div>
        </div>
    {{/if}}
    {{#if exercise.rep}}
        <div class="form-group">
            <label for="inputReps" class="col-sm-2 control-label">Reps:</label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="inputReps" placeholder="{{exercise.rep}}" required>
            </div>
        </div>
    {{/if}}
    {{#if exercise.distance}}
        <div class="form-group">
            <label for="inputDist" class="col-sm-2 control-label">Distance: </label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="inputDist" placeholder="{{exercise.distance}}" required>
            </div>
        </div>
    {{/if}}
    {{#if exercise.time}}
        <div class="form-group">
            <label for="inputTime" class="col-sm-2 control-label">Time: </label>
            <div class="col-sm-5">
                <input type="number" class="form-control" id="inputTime" pattern="HH:mm:ss" placeholder="00:00:00" required>
            </div>
        </div>
    {{/if}}

    <button class="navExercise btn {{#if nav.prev}}disable{{/if}}" type="button" value="Prev"></button>
    <button class="navExercise btn {{#if nav.next}}disable{{/if}}" type="button" value="Next"></button>

</form>
