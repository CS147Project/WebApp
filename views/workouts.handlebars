<!doctype html>

<a href="/startWorkoutCreation">
  <button type="button" class="btn btn-default">Create Workout</button>
</a>

<a href="/assign">
  <button type="button" class="btn btn-default">Assign Workout</button>
</a>

<div class="panel panel-default">
    <a href="goWorkout0"><div id="startWorkout" class="btn btn-success btn-block">
      <span class="glyphicon glyphicon-play-circle glyphicons-lg"></span> Start Workout
    </div></a>
    <div class="panel-heading"> 
      Recently Created Workouts
    </div>

    {{#if templateWorkouts}}
      <table class="table">
          {{#each templateWorkouts}}
            <tr class="btn" id="{{id}}">
              <td><a href="/goWorkout/{{id}}">{{title}}</a></td>
            </tr>
          {{/each}}
      </table>
    {{else}}
        <h4>No workouts created recently</h4>
    {{/if}}
</div>

