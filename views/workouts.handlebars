<!doctype html>

<a href="/startWorkoutCreation">
  <button type="button" class="btn btn-default">Create Workout</button>
</a>

<a href="/assign">
  <button type="button" class="btn btn-default">Assign Workout</button>
</a>

<div id="selectWorkout" class="panel panel-default">
    {{#if userWorkouts}}
      <a href="/goWorkout{{userWorkouts.0._id}}">
        <div id="startWorkout" class="btn btn-primary btn-block btn-large">
          <span class="glyphicon glyphicon-play-circle glyphicons-lg"></span> Start Workout
        </div>
      </a>
    {{else}}
      <a href="#">
        <div id="startWorkout" class="btn btn-primary btn-block btn-large disabled">
          <span class="glyphicon glyphicon-play-circle glyphicons-lg"></span> Start Workout
        </div>
      </a>
    {{/if}}
    <div class="panel-heading"> 
      Your Workouts
    </div>

    {{#if userWorkouts}}
      <table class="table">
        {{#each userWorkouts}}
          <tr id="workout">
            <td id="{{_id}}"><a href="/goWorkout{{_id}}">{{title}}</a></td>
          </tr>
        {{/each}}
      </table>
    {{else}}
        <h4>No workouts</h4>
    {{/if}}
</div>
